header(class="authenticated" + ( local.updates ? " updates" : "" ) )
  a.home(href="/" title="Go to our home page.") !{app.resources.images.logo}
  nav
    ul.content
      li.discussions
        a(href="discussions") Discussions
      li.members
        a(href="members") Members
      li.about
        a(href="content/About/id/1") About
      li.help
        a(href="content/Help/id/2") Help
    ul.account
      if local.unread.topics
        li.subscriptions.updates
          a(href="subscriptions") Subscriptions <span class="count">(#{local.unread.topics.length} unread)</span>
      else
        li.subscriptions
          a(href="subscriptions") Subscriptions
      if local.unread.privateTopics
        li.private-topics.updates
          a(href="private-topics") Private Topics <span class="count">(#{local.unread.privateTopics.length} unread)</span>
      else
        li.private-topics
          a(href="private-topics") Private Topics
      li.account
        a(href="account") Your Account
      li.sign-out
        a(href="sign-out") Sign Out
  section.status
    if local.unread.privateTopics
      a.private-topics.updates(href="private-topics" title="You have unread private topics.")
        <svg class="icon messages-new"><use xlink:href="themes/#{session.themePath.images}/images/symbols.svg#icon-messages-new"></use></svg> Private Topics
    else
      a.private-topics(href="private-topics" title="You have no private topic updates.")
        <svg class="icon messages"><use xlink:href="themes/#{session.themePath.images}/images/symbols.svg#icon-messages"></use></svg> Private Topics
    a.account.avatar(href="account") Your Account
      img(src="avatars/" + session.user_id + ".jpg")
