header(class="authenticated #{ updates ? 'updates' : '' }")
  a.home(href="/" title="Go to our home page.")
    <svg class="logo"><use xlink:href="themes/default/images/symbols.svg#logo-horizontal"></use></svg>
  nav
    section.donate
      | <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
      | <input type="hidden" name="cmd" value="_donations" />
      | <input type="hidden" name="business" value="donations@originaltrilogy.com" />
      | <input type="hidden" name="currency_code" value="USD" />
      | <input type="submit" name="submit" value="Donate with PayPal" />
      | <img alt="" border="0" src="https://www.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1" />
      | </form>
    ul.content
      li.discussions
        a(href="discussions") Discussions
      li.members
        a(href="members") Members
      li.about
        a(href="content/About/id/1") About
      li.help
        a(href="content/Help/id/2") Help
    ul.account
      if unread.topics
        li.subscriptions.updates
          a(href="subscriptions") Subscriptions <span class="count">(#{unread.topics.length} unread)</span>
      else
        li.subscriptions
          a(href="subscriptions") Subscriptions
      if unread.privateTopics
        li.private-topics.updates
          a(href="private-topics") Private Topics <span class="count">(#{unread.privateTopics.length} unread)</span>
      else
        li.private-topics
          a(href="private-topics") Private Topics
      li.account
        a(href="account") Your Account
      li.sign-out
        a(href="sign-out") Sign Out
  section.status
    if unread.privateTopics
      a.private-topics.updates(href="private-topics" title="You have unread private topics.")
        <svg class="icon messages-new"><use xlink:href="themes/default/images/symbols.svg#icon-messages-new"></use></svg> Private Topics
    else
      a.private-topics(href="private-topics" title="You have no private topic updates.")
        <svg class="icon messages"><use xlink:href="themes/default/images/symbols.svg#icon-messages"></use></svg> Private Topics
    a.account.avatar(href="account") Your Account
      img(src="avatars/#{session.userID}.jpg")
